        <item name="android:windowBackground">@color/blackish</item>
        <item name="android:popupMenuStyle">@android:style/Widget.DeviceDefault.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@android:style/Widget.DeviceDefault.ListView.DropDown</item>
        <item name="android:itemTextAppearance">@style/DropDownItemLight</item>
